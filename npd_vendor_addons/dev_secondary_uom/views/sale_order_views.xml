<?xml version="1.0" encoding="utf-8"?>
<odoo>
	 <record id="dev_sale_order_second_uom_form" model="ir.ui.view">
         <field name="name">dev.sale.order.second.uom.form</field>
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale.view_order_form"/>
         <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom']" position="after">
	            <field name="uom_category_id" invisible="1"/>
	            <field name="second_uom_qty" groups="dev_secondary_uom.group_sale_second_uom"/>
	            <field name="second_uom_id" domain="[('category_id','=',uom_category_id)]" 
	                options="{'no_quick_create': True, 'no_create_edit' : True}" groups="dev_secondary_uom.group_sale_second_uom"
	                force_save="1" attrs="{'readonly': [('state', 'in', ('sale','done', 'cancel'))]}" /> 
        	</xpath>
        	
        	<xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
	            <field name="second_price"  groups="dev_secondary_uom.group_sale_second_uom" /> 
        	</xpath>
        	
        	<xpath expr="//field[@name='order_line']//form//label[@for='qty_delivered']" position="before">
        	    <label for="second_uom_qty" string="Secondary Quantity"/>
                <div>
                    <field name="second_uom_qty" class="oe_inline" groups="dev_secondary_uom.group_sale_second_uom"/>
                    <field name="second_uom_id" groups="dev_secondary_uom.group_sale_second_uom" class="oe_inline oe_no_button" 
                        force_save="1" attrs="{'readonly': [('state', 'in', ('sale','done', 'cancel'))]}" 
                        options="{'no_quick_create': True, 'no_create_edit' : True}"
                        domain="[('category_id','=',uom_category_id)]"/>
                    <field name="uom_category_id" invisible="1"/>
                </div>
        	</xpath>
        	
        	<xpath expr="//field[@name='order_line']//form//field[@name='price_unit']" position="after">
	            <field name="second_price"  groups="dev_secondary_uom.group_sale_second_uom" /> 
        	</xpath>
        	
        	
        </field>
    </record>
</odoo>
