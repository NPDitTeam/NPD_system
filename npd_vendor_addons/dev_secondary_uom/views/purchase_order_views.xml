<?xml version="1.0" encoding="utf-8"?>
<odoo>
	 <record id="dev_purchase_order_second_uom_form" model="ir.ui.view">
         <field name="name">dev.purchase.order.second.uom.form</field>
         <field name="model">purchase.order</field>
         <field name="inherit_id" ref="purchase.purchase_order_form"/>
         <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom']" position="after">
	            <field name="uom_category_id" invisible="1"/>
	            <field name="second_uom_qty" groups="dev_secondary_uom.group_purchase_second_uom"/>
	            <field name="second_uom_id" domain="[('category_id','=',uom_category_id)]" 
	                options="{'no_quick_create': True, 'no_create_edit' : True}" groups="dev_secondary_uom.group_purchase_second_uom"
	                attrs="{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}" force_save="1" /> 
        	</xpath>
        	
        	<xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
	            <field name="second_price" 
	                groups="dev_secondary_uom.group_purchase_second_uom" 
	                attrs="{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}" force_save="1" /> 
        	</xpath>
        	
        	
        </field>
    </record>
</odoo>
