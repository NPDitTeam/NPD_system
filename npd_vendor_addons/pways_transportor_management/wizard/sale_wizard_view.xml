<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_wizard_form_view" model="ir.ui.view">
        <field name="name">Sale Wizard</field>
        <field name="model">sale.shipment.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Sale Report">
                <group>
                    <group>
                        <field name="route"/>
                        <field name="driver"/>
                        <field name="vehicle"/>
                    </group>
                    <group >
                        <field name="pick_date"/>
                        <field name="arrive_date"/>
                        <field name="picking_type"/>
                    </group>
                </group>
                <footer>
                    <button class="oe_highlight" name="create_transport_record" string="Create" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_wizard" model="ir.actions.act_window">
        <field name="name">Sale Report</field>
        <field name="res_model">sale.shipment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record> 

<!--      <menuitem id="menu_sale_wizard"
        action="action_sale_wizard"
        name="Sale Report"/> -->
</odoo>