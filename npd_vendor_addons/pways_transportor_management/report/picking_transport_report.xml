<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="chalan_information" model="ir.actions.report">
            <field name="name">Picking Shipment Report</field>
            <field name="model">stock.picking.transport.info</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pways_transportor_management.picking_transport_print</field>
            <field name="report_file">pways_transportor_management.picking_transport_print</field>
            <field name="print_report_name">'Shipment - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_stock_picking_transport_info"/>
            <field name="binding_type">report</field>
        </record>

        <template id="picking_transport_print">
             <t t-foreach="docs" t-as="doc">
             <t t-call="web.html_container">
               <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row mt32 mb32">
                             <div class="col-xs-6 text-left">
                             </div>
                             <div class="col-xs-6 text-left">
                             </div>
                         </div>
                    <div class="row">
                        <div class="text-center">
                            <h3>
                                <span>Picking Shipment</span> -  <span t-field="doc.name"/>
                            </h3>
                        </div>
                    </div>
                    <table class="table table-condensed">
                           <tr>
                                <td><strong>Transporter</strong></td><td> <span t-field="doc.transporter_id.name"/></td>
                               <td><strong>Delivery</strong> </td><td> <span t-field="doc.delivery_id.name"/></td>
                               <td></td>
                           </tr>
                           <tr>
                                <td><strong>Vehicle</strong></td><td> <span t-field="doc.vehicle_id.name"/></td>
                               <td><strong>Destination</strong> </td><td> <span t-field="doc.destination_id.name"/></td>
                               <td></td>
                           </tr>
                           <tr>
                                <td><strong>Vehicle Driver</strong> </td><td> <span t-field="doc.vehicle_driver.name"/></td>
                                <td><strong>No of Parcel</strong></td><td><span t-field="doc.no_of_parcel"/></td>
                                <td></td>
                           </tr>
                           <tr>
                               <td><strong>Sale Order</strong></td><td> <span t-field="doc.saleorder_id.name"/></td>
                               <td><strong>Shipment Date</strong></td><td> <span t-field="doc.transport_date"/></td>
                               <td></td><td></td>
                           </tr>
                            <tr>
                                <td><strong>User</strong></td><td><span t-field="doc.user_id.name"/></td>
                                <td><strong>LR Number</strong></td><td><span t-field="doc.lr_number"/></td>
                                <td></td>
                           </tr>
                    </table>
                    <h3>Shipment Information</h3>
                        <table class="table table-condensed">
                           <tr>
                               <td><strong>Weight </strong><span t-field="doc.weight"/><span t-field="doc.weight_uom_id"/></td>
                               <td><strong>Pick Date </strong></td><td> <span t-field="doc.picking_date"/></td>
                                <td><strong>Waybill No</strong></td><td> <span t-field="doc.bill"/></td>
                           </tr>
                           <tr>
                            <td><strong>Distance</strong> </td><td><span t-field="doc.distance"/></td>
                             <td><strong>Arrive Date </strong></td><td> <span t-field="doc.exp_date"/></td>
                            <td><strong>Total Charges</strong></td><td> <span t-field="doc.total_charge"/></td>
                           </tr>
                        </table>
                    <h3>Shipment Route Details</h3>
                        <table class="table table-condensed">
                            <tr>
                                   <td><strong>Source</strong></td>
                                   <td><strong>Destination</strong></td>
                                   <td><strong>Distance</strong></td>
                                   <td><strong>Hours</strong></td>
                                   <td><strong>Status</strong> </td>
                                   <td><strong>Tracking No</strong></td>
                            </tr>
                            <t t-foreach="doc.picking_route_ids" t-as="line">
                               <tr>
                                    <td><span t-field="line.source_location.name"/></td>
                                    <td><span t-field="line.destination_location.name"/></td>
                                    <td><span t-field="line.distance"/>(Km)</td>
                                    <td><span t-field="line.hour" widget="float_time"/></td>
                                    <td><span t-field="line.status"/></td>
                                    <td><span t-field="line.gps_tracking"/></td>
                               </tr>
                           </t>
                        </table>
                    </div>
              </t>
            </t>
            </t>
        </template>
    </data>
</odoo>
