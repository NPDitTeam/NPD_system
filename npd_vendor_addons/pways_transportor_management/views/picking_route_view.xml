<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="picking_route_form_view" model="ir.ui.view">
            <field name="name">picking.route.form.view</field>
            <field name="model">stock.picking.route</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="route_on_route" type="object" string="ON Route" states="start,halt" class="btn-primary"/>
                        <button name="route_hold" type="object" string="Halt" states="start,onroute" class="btn-primary"/>
                        <button name="route_reach" type="object" string="Reach" states="start,halt,onroute" class="btn-primary"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="source_location"/>
                                <field name="destination_location"/>
                                <field name="distance"/>
                                <field name="hour"/>
                                <field name="gps_tracking"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="delivery_id"/>
                                <field name="delivery_route_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="picking_route_tree_view" model="ir.ui.view">
            <field name="name">picking.route.tree</field>
            <field name="model">stock.picking.route</field>
            <field name="arch" type="xml">
                 <tree>
                    <field name="source_location"/>
                    <field name="destination_location"/>
                    <field name="distance"/>
                    <field name="hour"/>
                    <field name="gps_tracking"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="delivery_id"/>
                    <field name="delivery_route_id"/>
                    <field name="status"/>
                 </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_picking_route">
            <field name="name">Picking Route</field>
            <field name="res_model">stock.picking.route</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_picking_route_info"
            name="Shipment Route Entries"
            parent="menu_transport_childe"
            action="action_picking_route"
            sequence="3"/>

           </data>
        </odoo>
