<odoo>
    <data>

        <record id="transport_driver_form_view" model="ir.ui.view">
            <field name="name">transport.driver.form.view</field>
            <field name="model">transport.driver</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="licence_id"/>
                                <field name="licence_type"/>
                            </group>
                            <group>
                                <field name="valid_from"/>
                                <field name="valid_to"/>
                                <field name="date_exp"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="transport_driver_tree_view" model="ir.ui.view">
            <field name="name">transport.driver.tree</field>
            <field name="model">transport.driver</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='name'/>
                    <field name="licence_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_transport_driver">
            <field name="name">Driver</field>
            <field name="res_model">transport.driver</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="menu_transport_driver"
            name=" Shipment Drivers"
            parent="menu_setting"
            action="action_transport_driver"/>


    </data>
</odoo>