<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="transport_management_fleet_vehicle_form" model="ir.ui.view">
            <field name="name">fleet.vehicle.form</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='driver_id']" position="after">
                        <field name="transport_driver_id"/>
                        <field name="transporter_id" domain="[('transporter','=',True)]"/>
                </xpath>
                <xpath expr = "//field[@name='driver_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_transport_vehicles">
            <field name="name">Vehicles</field>
            <field name="res_model">fleet.vehicle</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_transport_vehicle"
            name="Shipment Vehicles"
            parent="menu_setting"
            action='action_transport_vehicles'/>
    </data>
</odoo>
