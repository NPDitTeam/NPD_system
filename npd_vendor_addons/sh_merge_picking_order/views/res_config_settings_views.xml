<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_inventory_config_setting_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']/div[1]" position="after">
                <h2>Picking Order Merge Configuration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="merge_type" style="margin-bottom: 10px;" />
                            <br />
                            <field name="merge_type" class="oe_inline" widget="radio" />
                        </div>
                        <div class="o_setting_left_pane"></div>
                    </div>
                    <div class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_stock_sub_merge_qty" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_stock_sub_merge_qty" />
                            <div class="text-muted"></div>
                        </div>
                    </div>
                    <div class="col-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="notify_in_chatter" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="notify_in_chatter" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
