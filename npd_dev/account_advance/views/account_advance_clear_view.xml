<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_advance_clear_form_view" model="ir.ui.view">
            <field name="name">account.advance.clear.form</field>
            <field name="model">account.advance.clear</field>
            <field name="arch" type="xml">
                <form string="Advance Request">
                    <header>
                        <button name="submit" string="Confirm" class="oe_highlight" states="draft" type="object"/>
                        <button name="confirm" string="Post" class="oe_highlight" states="confirm" type="object"  groups="account.group_account_manager"/>
                        <button name="action_cancel_draft"  string="Cancel"  states="draft" type="object" groups="account.group_account_manager"/>
                        <button name="cancel_advance" string="Cancel"  states="post" type="object" groups="account.group_account_manager"/>
<!--                         <button name="set_draft" string="Reset To Draft" states="cancel" type="object"/>-->
                        <button name="set_draft" string="Reset To Draft"  states="cancel" type="object" attrs="{'invisible': [ ('state', '!=', 'confirm')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,post,cancel" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="employee_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                                       attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="advance_id"
                                       options="{'no_quick_create':True,'no_create_edit':True}"

                                       attrs="{'readonly': [('state','!=','draft')]}"
                                />
                                <field name="journal_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                                       attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="account_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                                       attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="move_id" readonly="1" force_save="1"/>
                                  
                            </group>
                            <group>
                                <field name="doc_date" attrs="{'readonly': [('state','!=','draft')]}"/>
                                 <field name="description" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="company_id" attrs="{'readonly': [('state','!=','draft')]}" options="{'no_create': True}" />
                                 <field name="currency_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                                 <field name="is_partial" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="payment_method_id" attrs="{'readonly': [('state','!=','draft')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                <field name="advance_amount"  attrs="{'invisible': [('is_partial','=',False)]}" force_save="1"/>
                                 <field name="payment_type" invisible="True"/>
                                <field name="cheque_id"
                                      attrs="{'invisible': [('payment_type','!=', 'cheque')],'required': [('payment_type','=', 'cheque')]}"
                                       context="{'default_payment_method_id': payment_method_id, 'default_journal_id': journal_id, 'default_cheque_type': 'inbound' }"/>
                                <field name="amount_clearing" attrs="{'invisible': [('is_partial','=',False)],'readonly': [('state','!=','draft')]}" />
                            </group>
                        </group>
                        <notebook  >
                            <page string="Detail">
                                <field name="clear_ids" attrs="{'readonly': [('state','!=','draft')]}"  >
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                        <field name="name"/>
                                    <field name="account_id" groups="account.group_account_user" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                    <field name="account_analytic_id" domain="[('company_id', '=', parent.company_id)]" groups="analytic.group_analytic_accounting"/>
                                    <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags"/>
                                      <field name="invoice_number"/>
                                        <field name="invoice_date"/>
                                     <field name="partner_id" groups="account.group_account_user" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids" widget="many2many_tags" domain="[('type_tax_use','=','purchase')]"/>

                                    <field name="price_subtotal"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                                <page string="Tax">
                        <field name="tax_line" >
                            <tree string="Tax"  editable="bottom">
                                <field name="tax_invoice_number" />
                                <field name="tax_invoice_date" />
                                <field name="partner_id" />
                                <field name="tax_base_amount" />
                                <field name="balance" />
                            </tree>
                        </field>
                    </page>
                             <page string="Withholding Tax">
                        <field name="wt_cert_ids" attrs="{'readonly': [('state','!=','draft')]}" >
                            <tree string="WHT Line" >
                                <field name="income_tax_form" />
                                <field name="name" />
                                <field name="date" />
                                <field name="supplier_partner_id" />
                                <field name="state" />
                                <field name="base_amount" />
                                <field name="tax_amount" />
                            </tree>
                        </field>
                    </page>
                        </notebook>
                              <group>
                                <group>
                                    <field name="note" attrs="{'readonly': [('state','!=','draft')]}"/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" >
                                <field name="untaxed_amount" />
                                    <field name="tax_amount" />
                                    <field name="wht_amount"/>
                                     <field name="amount" invisible="1"/>
                                    <field name="exclude_amount" />
                                     <field name="advance_amount" force_save="1" />
                                     <field name="clear_amount" />

                                </group>
                              
                                  </group>
                    </sheet>
                       <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="account_advance_clear_tree" model="ir.ui.view">
            <field name="name">account.advance.clear.tree</field>
            <field name="model">account.advance.clear</field>
            <field name="arch" type="xml">
                    <tree string="Advance Clear">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="advance_id"/>
                    <field name="doc_date"/>
                    <field name="advance_amount"/>
                    <field name="description"/>
                        <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="action_account_advance_clear" model="ir.actions.act_window">
            <field name="name">Avance Clear</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.advance.clear</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="account_advance_clear" name="Advance Clear" parent="account_advance_root" action="action_account_advance_clear" sequence="30"/>

    </data>
</odoo>