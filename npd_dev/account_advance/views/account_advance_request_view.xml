<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_advance_request_form_view" model="ir.ui.view">
            <field name="name">account.advance.request.form</field>
            <field name="model">account.advance.request</field>
            <field name="arch" type="xml">
                <form string="Advance Request">
                    <header>
                        <button name="submit" string="Submit" class="oe_highlight" states="draft" type="object"/>
                        <button name="approve" string="Approve" class="oe_highlight" states="submit" type="object"  groups="account.group_account_user" />
                        <button name="cancel" string="Cancel"  states="submit" type="object"  groups="account.group_account_user" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,receipt,cancel" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="employee_id" attrs="{'readonly': [('state','!=','draft')]}" />
                                <field name="department_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="company_id"  />
                            </group>
                            <group>
                                <field name="request_date" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="due_date" attrs="{'readonly': [('state','!=','draft')]}"/>
                                 <field name="user_id" attrs="{'readonly': [('state','!=','draft')]}" />
                                 <field name="advance_id"></field>
                                  <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                            </group>
                        </group>
                        <group string="Advance Information">
                            <field name="advance_total" attrs="{'readonly': [('state','!=','draft')]}"/>
                              <field name="description" attrs="{'readonly': [('state','!=','draft')]}"/>
                        </group>
                    </sheet>
                       <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="account_advance_request_tree" model="ir.ui.view">
            <field name="name">account.advance.request.tree</field>
            <field name="model">account.advance.request</field>
            <field name="arch" type="xml">
                    <tree string="Advance Request" >
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="request_date"/>
                    <field name="user_id"/>
                    <field name="advance_total"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="action_account_advance_request" model="ir.actions.act_window">
            <field name="name">Advance Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.advance.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>
        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="account_advance_root" name="Advance System" parent="account.menu_finance"  sequence="15"/>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="account_advance_request" name="Advance Request" parent="account_advance_root" action="action_account_advance_request" sequence="10"/>

    </data>
</odoo>