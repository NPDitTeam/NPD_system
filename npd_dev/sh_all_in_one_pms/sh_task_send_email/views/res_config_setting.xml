<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_send_by_email_stage_config_setting_view" model="ir.ui.view">
            <field name="name">send.by.email.config.setting.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='project']" position="inside">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_task_send_by_email" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_task_send_by_email" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_task_sub_task" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_task_sub_task" />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
