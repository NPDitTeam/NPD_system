<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_mass_project_stage_config_setting_view" model="ir.ui.view">
        <field name="name">project.stage.config.setting.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_mass_project_stage" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_mass_project_stage" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_project_custom_checklist" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_project_custom_checklist" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
