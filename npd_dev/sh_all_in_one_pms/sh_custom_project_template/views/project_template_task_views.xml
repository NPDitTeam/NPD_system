<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_project_template_task_form_view" model="ir.ui.view">
        <field name="name">Project Template Task Form</field>
        <field name="model">project.template.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" invisible="1" />
                            <field name="name" />
                        </group>
                        <group>
                            <field name="assigned_to" />
                            <field name="sh_task_id" widget="many2many_tags" invisible="1" />
                        </group>
                        <group colspan="2">
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_project_template_task_form_view2" model="ir.ui.view">
        <field name="name">Project Template Task Form</field>
        <field name="model">project.template.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" />
                        </group>
                    </group>
                    <field name="sh_task_id"
                        context="{'default_sh_project_template_task_id': id}">
                        <tree editable="bottom">
                            <field name="name" />
                            <field name="user_id" optional="show"
                                domain="[('share', '=', False), ('active', '=', True)]" />
                            <field name="description" optional="show" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>