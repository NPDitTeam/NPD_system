<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sh_action_milestone_to_task_event" model="ir.actions.act_window">
        <field name="name">Milestone To Task</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_milestone_id': [active_id]}</field>
    </record>
    <record id="sh_project_milestone_form_view" model="ir.ui.view">
        <field name="name">project.milestone.form</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
            <form string="Project Milestone">
                <header>
                    <button name="button_inprogress" states="new,cancelled" string="In Progress" type="object" class="oe_highlight" groups="sh_all_in_one_pms.group_milestone_manager" />
                    <button name="button_completed" states="in_progress" string="Complete" type="object" groups="sh_all_in_one_pms.group_milestone_manager" />
                    <button name="button_cancelled" states="in_progress" string="Cancel" type="object" groups="sh_all_in_one_pms.group_milestone_manager" />

                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,completed,cancelled" readonly="1" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" icon="fa-tasks" name="%(sh_action_milestone_to_task_event)d" groups="sh_all_in_one_pms.group_milestone_manager">
                            <field name="task_count" string="Task" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" invisible="1" />
                            <field name="start_date" />
                            <field name="duration" />
                            <field name="rem_day" />
                        </group>
                        <group>
                            <field name="project_id" domain="[('is_milestone','=',True)]" />
                            <field name="end_date" />
                            <field name="completed_per" invisible="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sh_project_milestone_tree_view" model="ir.ui.view">
        <field name="name">project.milestone.tree</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
            <tree string="Project Milestone" sample="1">
                <field name="name" />
                <field name="project_id" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="duration" />
                <field name="rem_day" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="sh_project_milestone_search_view" model="ir.ui.view">
        <field name="name">project.milestone.search</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|',('name','ilike',self),('project_id','ilike',self)]]" />
                <field name="project_id" />
                <filter string="Expired" name="expired" domain="[( 'end_date' , '&lt;', datetime.datetime.now().strftime('%m/%d/%Y') )]" />
                <filter string="Today Expire" name="today_expired" domain="[( 'end_date' ,'=' , datetime.datetime.now().strftime('%m/%d/%Y') )]" />
                <separator />
                <group expand="1" name="group_by" string="Group By">
                    <filter name="group_project" string="Project" context="{'group_by': 'project_id'}" />
                    <filter name="group_milestone" string="Milestone" context="{'group_by': 'name'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="sh_action_project_milestone" model="ir.actions.act_window">
        <field name="name">Project Milestone</field>
        <field name="res_model">project.milestone</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by':['project_id']}</field>
    </record>
    <menuitem id="project_milestone" name="Project Milestone" action="sh_action_project_milestone" parent="project.menu_project_config" groups="sh_all_in_one_pms.group_milestone_manager" />
</odoo>
