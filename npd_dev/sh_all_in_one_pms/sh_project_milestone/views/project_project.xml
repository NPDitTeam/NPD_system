<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_action_project_to_milestone_event" model="ir.actions.act_window">
        <field name="name">Project To Milestone</field>
        <field name="res_model">project.milestone</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_project_id': active_id}</field>
    </record>
    <record id="sh_project_project_milestone_inherit_form_view" model="ir.ui.view">
        <field name="name">project.project.milestone.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options_active']" position="after">
                <div groups="sh_all_in_one_pms.group_milestone_manager">
                    <label for="is_milestone" class="oe_inline" string="Is Milestone ?" />
                    <field name="is_milestone" class="oe_inline oe_input_align" />
                </div>
            </xpath>
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action" icon="fa-tasks" name="%(sh_action_project_to_milestone_event)d" attrs="{'invisible': [('is_milestone','=',False )]}" groups="sh_all_in_one_pms.group_milestone_manager">
                    <field name="milestone_count" string="Milestone" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
