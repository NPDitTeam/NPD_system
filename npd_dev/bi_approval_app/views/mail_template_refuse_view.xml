<?xml version="1.0"?>
<odoo>
	<data>
		<record id="email_template_approval_refuse" model="mail.template">
			<field name="name">Applicant: Approval Refuse</field>
			<field name="model_id" ref="bi_approval_app.model_my_approval"/>
			<field name="subject">Approval Request Refuse Mail</field>
			<field name="email_from">"${object.env.user.company_id.name}" &lt;${object.env.user.company_id.email or user.email | safe}&gt;</field>
			<field name="email_to"> Purchaser</field>
			<field name="partner_to">${object.request_by.partner_id.id}</field>
			<field name="body_html" type="html">
				<table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
					<tr>
						<td valign="top">
							<div style="font-size: 13px; margin: 0px; padding: 0px;">
				                Hello,<br/>
							<br/>
				                Thank you for your interest in joining the
							<b>
								<t>YourCompany</t>
							</b> team.  We
				                wanted to let you know that, your application is Refuse.
							<br/>
							<br/>
				                Thank you,
							<div style="font-size: 11px; color: grey;">
								<t t-if="object.env.user">
				                        --									<br/>
									<strong t-out="object.env.user.name or ''">Mitchell Admin</strong>
									<br/>
				                        Email: <t t-out="object.env.user.email or ''">admin@yourcompany.example.com</t>
									<br/>
				                        Phone: <t t-out="object.env.user.phone or ''">+1 650-123-4567</t>
								</t>
								<t t-else="">
				                        --									<br/>
									<t>YourCompany</t>
									<br/>
				                        The HR Team
								</t>
							</div>
						</div>
					</td>
				</tr>
			</table>
		</field>
	</record>
</data>
</odoo>