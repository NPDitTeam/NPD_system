<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_approval_type_tree">
            <field name="name">approval.type.tree</field>
            <field name="model">approval.type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Approval Type">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_approval_type_form" model="ir.ui.view">
            <field name="name">approval.type.form</field>
            <field name="model">approval.type</field>
            <field name="arch" type="xml">
                <form string="Approval Type">
                    <sheet>
                        <field name="approval_image" widget='image' class="oe_avatar"/>
                        <div class="oe_title mb24">
                            <h1>
                                <field name="name" class="text-break" default_focus="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="is_apply_for_model"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Options">
                                <group name="fields" string="Fields">
                                    <group>
                                        <field name="contact_status" widget="radio" options="{'horizontal': true}"/>
                                        <field name="date_status" widget="radio" options="{'horizontal': true}"/>
                                        <field name="period_status" widget="radio" options="{'horizontal': true}"/>
                                        <field name="item_status" widget="radio" options="{'horizontal': true}"/>
                                        <field name="is_user_enable" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="quality_status" widget="radio" options="{'horizontal': true}"/>
                                        <field name="amount_status" widget="radio" options="{'horizontal': true}"/>
                                        <field name="payment_status" widget="radio" options="{'horizontal': true}"/>
                                        <field name="location_status" widget="radio" options="{'horizontal': true}"/>
                                    </group>
                                </group>
                                <group name="approvers" string="Approvers">
                                    <group>
                                        <field name="minimum_approvers"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page string=" ">
                                        <field name="line_ids">
                                            <tree editable="bottom">
                                                <field name="title"/>
                                                <field name="user_id"/>
                                                <field name="type_of_approval"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </page>
                            <page string="Other Information" attrs="{'invisible':[('is_apply_for_model', '=', False)]}">
                                <group>
                                    <group>
                                        <field name="is_mail_notification"/>
                                        <field name="template_request_id"/>
                                        <field name="template_approve_id"/>
                                        <field name="template_refuse_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_approval_type_kanban">
            <field name="name">approval.type.kanban</field>
            <field name="model">approval.type</field>
            <field name="arch" type="xml">
                <kanban class="o_approval_type_kanban">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('approval.type', 'approval_image',record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div t-if="record.description.value">
                                        <t t-esc="record.description.value"/>
                                    </div>
                                    <strong class="o_kanban_record_title">
                                        <field name="is_user_enable" invisible="1"/>
                                    </strong>
                                </div>
                                <div>
                                    <button class="btn btn-primary oe_kanban_action oe_kanban_action_button" name="bi_approval_app.action_approval_req_view" attrs="{'invisible':[('is_user_enable', '=', False)]}" context="{'default_approval_name_id': context.get('active_id')}" type="action">Create New Request</button>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_approval_type_view">
            <field name="name">Approval Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">approval.type</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="bi_approval_app.view_approval_type_kanban"/>
        </record>

        <menuitem name="Approvals" id="root_menu_approval_mng"/>

        <menuitem id="main_menu_bi_approval" parent="bi_approval_app.root_menu_approval_mng" name="Desboard" sequence="1"/>

        <menuitem id="menu_approval_type" name="Approval Types" action="bi_approval_app.action_approval_type_view" parent="bi_approval_app.main_menu_bi_approval" sequence="1"/>
    </data>
</odoo>