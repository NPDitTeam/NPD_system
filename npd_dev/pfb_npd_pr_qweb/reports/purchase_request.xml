                }
                .table-border{
                border: 1px solid #000000 !important;
                border-collapse: collapse;
                }

                .column140{
                color: #090909;
                width:140px;
                }
                .column100 {
                color: #090909;
                width:100px;
                }
                .column260{
                color: #090909;
                width:260px;
                padding-left: 20px;
                }
                .column550{
                width:550px;
                }
                .column410{
                color: #090909;
                width:475px;
                }
                .column130{
                color: #090909;
                width:130px;
                font-size:16px;
                }
                .column120 {
                color: #090909;
                width:120px;
                }
                .column320{
                width:320px;
                }
                .column290 {
                color: #090909;
                width:290px;
                }
                .column50 {
                color: #090909;
                width:50px;
                }
                .column60 {
                color: #090909;
                width:60px;
                }
                .column59 {
                color: #090909;
                width:59px;
                }
                .column70 {
                color: #090909;
                width:70px;
                }
                .column80 {
                color: #090909;
                width:80px;
                }
                .column370{
                width:370px;
                }
                .column330{
                width:330px;
                }
                .column350{
                width:350px;
                }
                .watermark1 {
                position: fixed;
                top:493px;
                left: 15px;
                }
                .column170{
                color: #090909;
                width:170px;
                }
                .column190{
                color: #090909;
                width:190px;
                }
                .column180{
                width:180px;
                }
                .column50{
                width:50px;
                }
                .header_text {
                font-size:24px;
                }

                .header2 {
                border-left:2px solid white;
                }

                .header3 {
                display: block;
                width: 80px;
                border:2px solid black;
                font-size:24px;
                }
            </style>
            <table class="table table-sm" style="margin-bottom: 0px !important;">
                <tr>
                    <td class="column320 header2 text-left" style="font-size:20px;">
                        <br/>
                        <br/>
                        <span t-field="company.partner_id.name"/>
                        <br/>
                        <span t-field="company.partner_id.street"/>
                        <span t-field="company.partner_id.street2"/>
                        <span t-field="company.partner_id.city"/>
                        <span t-field="company.partner_id.zip"/>
                        <br/>
                        เลขประจำตัวผู้เสียภาษี
                        <span t-field="company.partner_id.vat"/>
                    </td>
                    <td class="text-right column100">
                        <br/>
                        <br/>
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                             style="max-height: 130px;"
                             alt="Logo"/>
                    </td>

                </tr>
                <tr style="border-bottom: 1px solid black;">
                    <td colspan="2" class="text-center" style="font-size:30px;">
                        <strong>Purchase Requisition (ใบขอซื้อ)</strong>
                    </td>
                </tr>
            </table>
            <div class="row" style="margin-bottom: 10px !important;font-size:22px;">
                <div class="col-8">
                    <table class="table table-sm o_main_table">
                        <tr>
                            <td class="text-left">
                                <strong>หน่วยงานที่ขอซื้อ :</strong>
                                <t t-esc="o.department_id.name"/>
                                <br/>
                                <strong>งบประมาณคงเหลือ :</strong>
                                <!--                                 <t t-esc="o.department_id.name"/>-->
                                <br/>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-4">
                    <table class="table table-sm o_main_table">
                        <tr>
                            <td class="text-right">
                                <strong>เลขที่ใบขอซื้อ :</strong>
                                <t t-esc="o.name"/>
                                <br/>
                                <strong>วันที่ขอซื้อ :</strong>
                                <t t-set="year" t-value="(int((o.date_start).strftime('%Y')))+543"/>
                                <t t-set="date_start" t-value="'%s/%s' %((o.date_start).strftime('%d/%m'),year)"/>
                                <t t-esc="date_start"/>
                                <br/>
                                <strong>วันที่ต้องการ :</strong>
                                <t t-set="date_line" t-value=""/>
                                <t t-foreach="o.line_ids" t-as="date">
                                    <t t-set="date_line" t-value="date.date_required"/>
                                </t>
                                <t t-set="year" t-value="(int((date_line).strftime('%Y')))+543"/>
                                <t t-set="date_required" t-value="'%s/%s' %((date_line).strftime('%d/%m'),year)"/>
                                <t t-esc="date_required"/>
                                <br/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>
        <div t-attf-class="footer  o_company_#{company.id}_layout">
            <style>
                table, td, th {
                border: none !important;
                }
                .table-border tr td{
                border: 1px solid #000000 !important;
                border-collapse: collapse;
                }
                .column70 {
                width:70px;
                }
                .column370 {
                width:370px;
                }
                .column320 {
                width:320px;
                }
                .column120 {
                width:120px;
                }
                .no_border{
                border-bottom: 2px solid white;
                }
                .no_border tr{
                border-top: 2px solid white;
                border-bottom: 2px solid white;
                }
                .no_border td{
                border-left: 2px solid white;
                border-right: 2px solid white;
                }
            </style>
            <table class="last-page table table-sm table-condensed "
                   style="table-layout: fixed; width: 100%;font-size: 24px">
                <tr>
                    <td class="text-center">
                        <br/>
                        <b>___________________________________</b>
                        <br/>
                        <b>
                            วันที่
                            _______________________________
                        </b>
                        <br/>
                        <b>
                            ผู้จัดทำ
                        </b>
                    </td>
                    <td class="text-center">
                        <br/>
                        <b>___________________________________</b>
                        <br/>
                        <b>
                            วันที่
                            _______________________________
                        </b>
                        <br/>
                        <b>
                            ผู้อนุมัติ
                        </b>
                    </td>
                </tr>
            </table>
        </div>
    </template>

    <template id="external_all_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-call="pfb_npd_pr_qweb.external_all_layout_standard">
            <t t-raw="0"/>
        </t>
    </template>

    <template id="report_pr">
        <t t-call="web.html_container">
