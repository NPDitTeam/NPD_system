<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_bill_payment_view_form" model="ir.ui.view">
        <field name="name">create.bill.payment.view.form</field>
        <field name="model">create.bill.payment</field>
        <field name="arch" type="xml">
        <form string="Create Cheque Bank">
            <sheet>
            <group>
                <group>
                        <field name="journal_id" options="{'no_create': True}"   domain="[('type', 'in', ('bank', 'cash'))]"/>
                        <field name="payment_method_id" options="{'no_create': True}" />
                        <field name="date_payment" />
                </group>
            </group>
            <footer>
                        <button string="Create Payment" name="action_create_payments" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
            </sheet>
        </form>
        </field>
    </record>
  </odoo>