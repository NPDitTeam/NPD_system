<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_view_asset_repair_view_form" model="ir.ui.view">
            <field name="name">account.asset.form</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset_management.account_asset_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button
                            name="open_asset_repair"
                            string="Repair"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-bars"
                    />
                </xpath>
            </field>
        </record>


        <record id="view_repair_order_tree" model="ir.ui.view">
            <field name="name">asset.repair.tree</field>
            <field name="model">asset.repair.order</field>
            <field name="arch" type="xml">
                <tree string="Repairs order" multi_edit="1" sample="1">
                    <field name="name"/>
                    <field name="account_asset_id" readonly="1" optional="show"/>
                    <field name="user_id" optional="hide" widget='many2one_avatar_user'/>
                    <field name="guarantee_limit" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company" readonly="1" optional="show"/>
                    <field name="state" optional="show" widget='badge' decoration-success="state == 'done'"
                           decoration-info="state not in ('done', 'cancel')"/>
                </tree>
            </field>
        </record>

        <record id="view_repair_order_form" model="ir.ui.view">
            <field name="name">asset.repair.form</field>
            <field name="model">asset.repair.order</field>
            <field name="arch" type="xml">
                <form string="Repair Order">
                    <header>
                        <button name="action_validate"
                                states="draft"
                                type="object"
                                string="Confirm Repair"
                                class="oe_highlight"/>

                        <button name="action_repair_start"
                                states="confirmed"
                                type="object"
                                string="Request approval"
                                class="oe_highlight"/>

                        <button name="action_repair_end"
                                groups="npd_std_asset_menu.group_asset_manager"
                                states="under_repair"
                                type="object" string="Done"
                                class="oe_highlight"/>

                        <button name="action_repair_cancel_draft" states="cancel" string="Set to Draft" type="object"/>
                        <button name="action_repair_cancel" string="Cancel Repair" type="object"
                                attrs="{'invisible': [('state','=', 'cancel',)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    </header>
                    <sheet string="Repairs order">
                        <div class="oe_button_box" name="button_box">
                            <!-- <field name="invoice_id" invisible="1"/>-->
                        </div>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="account_asset_id"/>
                                <field name="code"/>
                                <field name="user_id" domain="[('share', '=', False)]"/>
                                <field name="user_id_repair" domain="[('share', '=', False)]"/>
                                <field name="user_id_approve" readonly="1"/>
                                <field name="approved_date"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                                <field name="guarantee_limit"/>
                                <field name="remark"/>
                                <field name="date_of_completion"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Parts" name="parts">
                                <field name="operations">
                                    <form string="Operations">
                                        <group>
                                            <group>
                                                <field name="company_id" invisible="1" force_save="1"/>
                                                <field name="product_id"/>
                                                <field name="name"/>
                                                <field name="product_uom_category_id" invisible="1"/>
                                                <label for="product_uom_qty"/>
                                                <div class="o_row">
                                                    <field name="product_uom_qty"/>
                                                    <field name="product_uom" groups="uom.group_uom"/>
                                                </div>
                                                <field name="price_unit"/>
                                                <field name="tax_id" widget="many2many_tags"/>
<!--                                                <field name="invoiced" invisible="1"/>-->
                                                <field name="price_subtotal" widget="monetary" invisible="1"/>
                                                <field name="currency_id" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="lot_id"
                                                       context="{'default_product_id': product_id, 'default_company_id': company_id}"
                                                       groups="stock.group_production_lot"/>
                                            </group>
                                        </group>
                                    </form>
                                    <tree string="Operations" editable="bottom">
                                        <field name="company_id" invisible="1" force_save="1"/>
                                        <field name="product_id"/>
                                        <field name='name' optional="show"/>
                                        <field name="product_uom_category_id" invisible="1"/>
                                        <field name="lot_id"
                                               context="{'default_product_id': product_id, 'default_company_id': company_id}"
                                               groups="stock.group_production_lot"/>
                                        <field name="product_uom_qty" string="Quantity"/>
                                        <field name="product_uom" string="UoM" groups="uom.group_uom" optional="show"/>
                                        <field name="price_unit"/>
                                        <field name="tax_id" widget="many2many_tags" optional="show"/>
                                        <field name="price_subtotal" widget="monetary"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed" sum="Untaxed amount"/>
                                    <field name="amount_tax"/>
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="amount_total"/>
                                        <button name="button_dummy"
                                                states="draft" string="(update)" type="object"
                                                class="oe_edit_only oe_link"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" sum="Total amount"
                                           class="oe_subtotal_footer_separator"/>
                                </group>
                                <div class="oe_clear"/>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="internal_notes" placeholder="Add internal notes."/>
                                
                                <field name="reference"/>
                                <field name="api_channel"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_repair_kanban" model="ir.ui.view">
            <field name="name">asset.repair.kanban</field>
            <field name="model">asset.repair.order</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="company_id" invisible="1"/>
                    <field name="name"/>
                    <field name="account_asset_id"/>
                    <field name="guarantee_limit"/>
                    <field name="date_of_completion"/>
                    <field name="state"/>
                    <field name="activity_state"/>
                    <progressbar field="activity_state"
                                 colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row mb4">
                                    <div class="col-6">
                                        <strong>
                                            <span>
                                                <t t-esc="record.name.value"/>
                                            </span>
                                        </strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'draft': 'info', 'cancel': 'danger', 'done': 'success', 'under_repair': 'secondary'}}"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 text-muted">
                                        <span>
                                            <t t-esc="record.account_asset_id.value"/>
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="float-right">
                                            <field name="user_id"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

