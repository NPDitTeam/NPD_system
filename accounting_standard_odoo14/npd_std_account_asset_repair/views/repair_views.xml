                  name="Asset Repair"
                  parent="npd_std_asset_menu.account_asset_request_menu"
                  action="action_repair_order_tree"
                  sequence="20"
        />

        <menuitem id="repair_report_menu"
                  name="Asset Repairs"
                  parent="npd_std_asset_menu.account_asset_report_menu"
                  action="action_repair_order_graph"
                  sequence="35"
        />


