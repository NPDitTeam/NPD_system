<odoo>
    <record model="ir.ui.view" id="view_res_company_add_field_form_inherit">
        <field name="name">res.company.add.field.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch']" position="after">
                <field name="tax_branch_name"/>
                <field name="tax_branch_eng_name"/>
            </xpath>
        </field>
    </record>
</odoo>