<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_account_move" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
                <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                     <field name="customer_id" domain="[('parent_id', '=', False)]"/>
                </xpath>  
                 <xpath
                expr="//notebook//field[@name='line_ids']/tree/field[@name='date_maturity']"
                position="after"
                >
                    <field name="customer_id" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
