<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="account_asset_transfer_pivot">
        <field name="name">account.asset.transfer.view.pivot</field>
        <field name="model">std.account.asset.transfer.report</field>
        <field name="arch" type="xml">
            <pivot string="asset_accountability_transfer" sample="1">
                <field name="name" type="row"/>
                <!--  <field name="source_department_id" type="row"/>-->
                <field name="asset_id" type="row"/>
                <!-- <field name="state" type="measure"/>-->
            </pivot>
        </field>
    </record>


    <record id="account_asset_transfer_report" model="ir.actions.act_window">
        <field name="name">Assets Transfer</field>
        <field name="res_model">std.account.asset.transfer.report</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="account_asset_transfer_pivot"/>
    </record>

</odoo>
