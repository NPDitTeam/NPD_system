<?xml version="1.0" encoding="utf-8" ?>
<odoo>

     <record id="inherit_view_asset_transfer_view_form" model="ir.ui.view">
        <field name="name">account.asset.form</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset_management.account_asset_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button
                        name="open_asset_transfer"
                        string="Transfer"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bars"
                />
            </xpath>
        </field>
    </record>


    <!-- Menu  -->
    <menuitem
            id="account_asset_transfer_menu"
            action="account_asset_transfer"
            parent="npd_std_asset_menu.account_asset_request_menu"
            sequence="1"
    />

    <menuitem
            id="account_asset_transfer_report_menu"
            action="account_asset_transfer_report"
            parent="npd_std_asset_menu.account_asset_report_menu"
            sequence="32"
    />

    <menuitem
            id="account_asset_transfer_type_setting_menu"
            action="account_asset_transfer_type"
            parent="npd_std_asset_menu.account_asset_setting_menu"
            sequence="43"
    />
</odoo>
