<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_asset_borrow_field_view_form" model="ir.ui.view">
        <field name="name">account.asset.form</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset_management.account_asset_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button
                        name="open_asset_borrow"
                        string="Borrow"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bars"
                />
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Borrow">
                    <group>
                        <group>
                            <field name="owner_user_id" readonly="1"/>
                            <field name="assign_date" readonly="1"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


