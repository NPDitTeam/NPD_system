<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
    <record id="view_stock_request_form" model="ir.ui.view">
        <field name="name">stock.request.form</field>
        <field name="model">stock.request</field>
            <field name="inherit_id" ref="stock_request.view_stock_request_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="standard_price"/>
                </xpath>

            </field>
        </record>
        <record id="stock_request.action_stock_request_form" model="ir.actions.act_window">
               <field name="name">Stock Request</field>
            <field name="res_model">stock.request</field>
          <field name="context">{
            'search_default_current_requests': 1,
            'pivot_column_groupby': ['location_id'], 'pivot_row_groupby': ['product_id'], 'pivot_measures': ['product_uom_qty', 'qty_done','standard_price'],
            'search_default_draft': 1, 'search_default_open': 1
        }</field>
        </record>


    </data>
</odoo>