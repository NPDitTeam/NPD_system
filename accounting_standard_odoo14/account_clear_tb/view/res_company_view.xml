<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <record id="res_config_settings_view_clear_tb_form" model="ir.ui.view">
                <field name="name">res.config.settings.view.form.inherit.clear.tb</field>
                <field name="model">res.config.settings</field>
                <field name="priority" eval="40"/>
                <field name="inherit_id" ref="base.res_config_settings_view_form"/>
                <field name="arch" type="xml">
                         <xpath expr="//div[@id='tax_exigibility']" position="after">
                               <div class="col-12 col-lg-6 o_setting_box"
                                id="clear_tb"
                                groups="account.group_account_user">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Journal Voucher Clear TB</span>
                                    <div class="text-muted">
                                        Default journal voucher clear tb
                                    </div>
                                    <field name="clear_tb_journal_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                </div>
                               </div>
                         </xpath>
              </field>
            </record>
    </data>
</odoo>