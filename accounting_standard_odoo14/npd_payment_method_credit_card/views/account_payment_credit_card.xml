<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="account_payment_invoice_inherit_invoice_form" model="ir.ui.view">
        <field name="name">account.payment.invoice.view.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_payment_invoice.account_payment_invoice_inherit_invoice"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='cheque_id']" position="after">
               <field name="credit_card_id" attrs="{'invisible': [('type','not in', ['creditcard'])]}"/>
            </xpath>
            <xpath expr="//field[@name='paid_ids']//tree//field[@name='cheque_id']" position="after">
               <field name="credit_card_id" attrs="{'invisible': [('type','not in', ['creditcard'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_view_sale_receipt_form_form" model="ir.ui.view">
        <field name="name">account.voucher.form.inherit</field>
        <field name="model">account.voucher</field>
        <field name="inherit_id" ref="account_voucher.view_sale_receipt_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='cheque_id']" position="after">
               <field name="credit_card_id" attrs="{'invisible': [('type','not in', ['creditcard'])]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_ids']//tree//field[@name='cheque_id']" position="after">
                <field name="credit_card_id" attrs="{'invisible': [('type','not in', ['creditcard'])]}"/>
            </xpath>
        </field>
    </record>


</odoo>