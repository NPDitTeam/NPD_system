<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_inherit_module_name" model="ir.ui.view">
        <field name="name">account.move.view.form.reset.tax.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="after">
                 <button name="button_reset_tax" string="Reset Tax" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|',  ('state', '!=', 'draft'), ('move_type', '=', 'entry')]}"/>
            </xpath>
           
        </field>
    </record>
    

</odoo>
