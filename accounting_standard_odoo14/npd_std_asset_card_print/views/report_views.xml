<odoo>

    <!-- PDF REPORTS -->
    <record id="action_report_asset_card_print" model="ir.actions.report">
        <field name="name">Asset Card</field>
        <field name="model">account.asset</field>
        <field name="report_name">npd_std_asset_card_print.report_asset_card</field>
        <field name="report_file">npd_std_asset_card_print.report_asset_card</field>
        <field name="report_type">qweb-pdf</field>
        <field
                name="paperformat_id"
                ref="npd_std_asset_card_print.paperformat_asset_card_print"
        />
        <field name="print_report_name">'Asset Card - %s%s' % (object.name, object.state == 'draft' and '-draft' or '')</field>
        <field name="binding_model_id" ref="account_asset_management.model_account_asset"/>
        <field name="binding_type">report</field>

    </record>


</odoo>
