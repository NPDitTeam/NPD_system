<odoo>
    <record id="account_asset_compute_view_form" model="ir.ui.view">
        <field name="name">petty.cash.summary</field>
        <field name="model">petty.cash.summary</field>
        <field name="arch" type="xml">
            <form string="Compute Asset">
                <group>
                    <field name="date_range_id" options="{'no_create': True, 'no_open': True}"/>
                </group>
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                     <group>

                        <field name="end_date"/>
                    </group>
                </group>

                <group>
                    <field name="company_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                    <field name="petty_cash_id" options="{'no_create': True, 'no_open': True}"/>
                </group>
                <footer>
                    <button
                            string="Report Summery"
                            name="create_report_summery"
                            type="object"
                            class="oe_highlight"
                    />
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
