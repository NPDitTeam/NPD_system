<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="view_move_form_inherit_fix" model="ir.ui.view">
        <field name="name">view.move.form.inherit.fix</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='partner_shipping_id']" position="replace">
                <field name='partner_shipping_id'
                       domain="[('id', 'child_of', partner_id), ('parent_id', '!=', False)]"
                       context="{'show_only_child': True}"
                       options='{"always_reload": True}'/>
            </xpath>
        </field>
    </record>

     <record id="account.res_partner_action_customer" model="ir.actions.act_window">
         <field name="domain">[('customer','=',True),('parent_id','=',False)]</field>
     </record>

    <!-- purchase_receipt -->
    <record id="view_purchase_receipt_form_fix" model="ir.ui.view">
        <field name="name">view.purchase.receipt.form.fix</field>
        <field name="model">account.voucher</field>
        <field name="inherit_id" ref="account_voucher.view_purchase_receipt_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('supplier','=',True),('parent_id','=',False)]</attribute>
            </xpath>
        </field>
    </record>

    <!-- sale.receipt -->
    <record id="view_sale_receipt_form_fix" model="ir.ui.view">
        <field name="name">view.sale.receipt.form.fix</field>
        <field name="model">account.voucher</field>
        <field name="inherit_id" ref="account_voucher.view_sale_receipt_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('customer','=',True),('parent_id','=',False)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
