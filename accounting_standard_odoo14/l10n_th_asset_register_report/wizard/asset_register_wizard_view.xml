<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ASSET REGISTER -->
    <record id="asset_register_wizard" model="ir.ui.view">
        <field name="name">Asset Register</field>
        <field name="model">asset.register.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="main_info">
                    <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                </group>
                <div>
                    <group name="filters">
                        <group>
                            <field name="asset_status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Time Filters" name="time_filters">
                            <group>
                                <group>
                                    <field name="date_range_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                </group>
                                <group/>
                            </group>
                        </page>
                        <page name="asset_ids" string="Asset">
                            <field name="asset_ids"/>
                        </page>
                        <page name="asset_profile_ids" string="Asset Profile">
                            <field name="asset_profile_ids"/>
                        </page>
                        <page string="Report Setting">
                            <group>
                                <p class="oe_grey" colspan="4">
                                    Define account type for accumulated depreciation account, to be used in report query
                                    SQL (one time setup).
                                </p>
                                <group>
                                    <field name="accum_depre_account_type"/>
                                </group>
                                <group>
                                    <field name="depre_account_type"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </div>
                <footer>
                    <div>
                        <button name="button_export_html" string="View"
                                type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button name="button_export_pdf" string="Export PDF" type="object"/>
                        or
                        <button name="button_export_xlsx" string="Export XLSX" type="object"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_asset_register_wizard" model="ir.actions.act_window">
        <field name="name">Asset Register</field>
        <field name="res_model">asset.register.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem
            id="menu_asset_register_report"
            name="Asset Register"
            parent="account.menu_finance_reports"
            sequence="50"
    />

    <menuitem
            id="menu_asset_register_report_wi"
            name="Asset Register"
            parent="menu_asset_register_report"
            action="action_asset_register_wizard"
            sequence="201"
    />


</odoo>
