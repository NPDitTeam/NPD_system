<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="view_stock_move_line_detailed_operation_tree_asset" model="ir.ui.view">
        <field name="name">stock.move.line.operations.inherit.asset.tree</field>
        <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='lot_name']" position="after">
                <field name="asset_group_id" options="{'no_create': True,'no_edit': True}" attrs="{'column_invisible': [('parent.picking_type_code', '!=', 'incoming')]}"/>
               <field name="asset_profile_id" options="{'no_create': True,'no_edit': True}" attrs="{'column_invisible': [('parent.picking_type_code', '!=', 'incoming')]}" />
            </xpath>
        </field>
    </record>
         <record id="stock_picking_form_view" model="ir.ui.view">
        <field name="name">stock.picking.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_id']" position="after">
                 <field name="asset_group_id" options="{'no_create': True,'no_edit': True}" attrs="{'column_invisible': [('parent.picking_type_code', '!=', 'incoming')]}"/>
               <field name="asset_profile_id" options="{'no_create': True,'no_edit': True}" attrs="{'column_invisible': [('parent.picking_type_code', '!=', 'incoming')]}" />
            <field name="warranty_date_end"  attrs="{'column_invisible': [('parent.picking_type_code', '!=', 'incoming')]}" />

            </xpath>
        </field>
    </record>


    </data>
</odoo>