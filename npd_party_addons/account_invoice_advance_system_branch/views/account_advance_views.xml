<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_advance_request_form_branch" model="ir.ui.view">
        <field name="name">account.advance.request.form</field>
        <field name="model">account.advance.request</field>
        <field name="inherit_id" ref="account_advance.account_advance_request_form_view"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="branch_id" attrs="{'readonly': [('state','!=','draft')]}"/>
            </field>            
        </field>
    </record>
    <record id="account_advance_form_branch" model="ir.ui.view">
        <field name="name">account.advance.form</field>
        <field name="model">account.advance</field>
        <field name="inherit_id" ref="account_advance.account_advance_form_view"/>
        <field name="arch" type="xml">
            <field name="department_id" position="after">
                <field name="branch_id" attrs="{'readonly': [('state','!=','draft')]}"/>
            </field>            
        </field>
    </record>

    <record id="account_advance_clear_form_branch" model="ir.ui.view">
            <field name="name">account.advance.clear.form</field>
            <field name="model">account.advance.clear</field>
            <field name="inherit_id" ref="account_advance.account_advance_clear_form_view"/>
            <field name="arch" type="xml">
                <field name="payment_method_id" position="after">
                    <field name="branch_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                </field>            
        </field>
    </record>    

</odoo>