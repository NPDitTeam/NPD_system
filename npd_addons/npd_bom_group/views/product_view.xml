<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_inherit_bom_button" model="ir.ui.view">
        <field name="name">product.template.procurement</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="mrp.product_template_form_view_bom_button"/>
        <field name="arch" type="xml">
             <button name="%(mrp.template_open_bom)d" position="replace">
                    <button class="oe_stat_button" name="%(mrp.template_open_bom)d" type="action" groups="npd_bom_group.group_bom_security"
                        attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}" icon="fa-flask">
                        <field string="Bill of Materials" name="bom_count" widget="statinfo" />
                    </button>
             </button>
        </field>
    </record>
</odoo>
