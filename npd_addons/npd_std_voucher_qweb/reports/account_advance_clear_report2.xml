<template id="external_all_layout_account_advance_clear_report_pdf2">
    <t t-if="not o" t-set="o" t-value="doc"/>

    <t t-if="not company">
        <!-- Multicompany -->
        <t t-if="company_id">
            <t t-set="company" t-value="company_id"/>
        </t>
        <t t-elif="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-else="else">
            <t t-set="company" t-value="res_company"/>
        </t>
    </t>

    <t t-call="npd_std_voucher_qweb.external_all_layout_standard_account_advance_clear_report_pdf2">
        <t t-raw="0"/>
    </t>
</template>

<template id="account_advance_clear_report_pdf2">
  <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                <t t-call="npd_std_voucher_qweb.external_all_layout_account_advance_clear_report_pdf2">
                </t>
                    <t t-call="web.external_layout">
                        <div class="page">
                    <style>
                        @font-face { 
                            font-family: THSarabunNew;
                        }                    
                        span.checkbox {
                                display: inline-block;
                                border: solid 1px black;
                                width: 16px;
                                height: 16px;
                            }   
                           
