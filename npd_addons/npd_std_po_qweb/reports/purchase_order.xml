<odoo>
    <!-- Header -->
    <template id="external_all_layout_standard">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style"
             style="margin-bottom: 0px !important;">
            <style>
                table, td, th {
                border: none !important;
                }
                .table-border{
                border: 1px solid #000000 !important;
                border-collapse: collapse;
                }

                .column140{
                color: #090909;
                width:140px;
                }
                .column100 {
                color: #090909;
                width:100px;
                }
                .column260{
                color: #090909;
                width:260px;
                padding-left: 20px;
                }
                .column550{
                width:550px;
                }
                .column410{
                color: #090909;
                width:475px;
                }
                .column130{
                color: #090909;
                width:130px;
                font-size:16px;
                }
                .column120 {
                color: #090909;
                width:120px;
                }
                .column320{
                width:320px;
                }
                .column290 {
                color: #090909;
                width:290px;
                }
                .column50 {
                color: #090909;
                width:50px;
                }
                .column60 {
                color: #090909;
                width:60px;
                }
                .column59 {
                color: #090909;
                width:59px;
                }
                .column70 {
                color: #090909;
                width:70px;
                }
                .column80 {
                color: #090909;
                width:80px;
                }
                .column370{
                width:370px;
                }
                .column330{
                width:330px;
                }
                .column350{
                width:350px;
                }
                .watermark1 {
                position: fixed;
                top:493px;
                left: 15px;
                }
                .column170{
                color: #090909;
                width:170px;
                }
                .column190{
                color: #090909;
                width:190px;
                }
                .column180{
                width:180px;
                }
                .column50{
                width:50px;
                }
                .header_text {
                font-size:24px;
                }

                .header2 {
                border-left:2px solid white;
                }

                .header3 {
                display: block;
                width: 80px;
                border:2px solid black;
                font-size:24px;
                }
            </style>
            <table class="table table-sm" style="margin-bottom: 0px !important;">
                <tr>
                    <td class="column320 header2 text-left" style="font-size:20px;">
                        <br/>
                        <br/>
                        <span t-field="company.partner_id.name"/>
                        <br/>
                        <span t-field="company.partner_id.street"/>
                        <span t-field="company.partner_id.street2"/>
                        <span t-field="company.partner_id.city"/>
                        <span t-field="company.partner_id.state_id.name"/>
                        <span t-field="company.partner_id.zip"/>
                        <br/>
                        เลขประจำตัวผู้เสียภาษี
                        <span t-field="company.partner_id.vat"/>
                    </td>
                    <td class="text-center column100">
                        <br/>
                        <br/>
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                             style="max-height: 130px;"
                             alt="Logo"/>
                    </td>

                </tr>
                <tr style="border-bottom: 1px solid black;">
                    <td colspan="2" class="text-center" style="font-size:30px;">
                        Purchasing Order(ใบสั่งซื้อ)
                    </td>
                </tr>
            </table>
            <div class="row" style="margin-bottom: 10px !important;font-size:22px;">
                <div class="col-8">
                    <table class="table table-sm o_main_table">
                        <tr>
                            <td class="text-left">
                                <strong>ผู้จำหน่าย :</strong>
                                <t t-esc="o.partner_id.name"/>
                                <br/>
                                <strong>ที่อยู่ :</strong>
                                <span t-esc="o.partner_id.street"/>
                                <span t-esc="o.partner_id.street2" style="padding-left:5px;"/>
                                <span t-esc="o.partner_id.city" style="padding-left:5px;"/>
                                <span t-esc="o.partner_id.state_id.name" style="padding-left:5px;"/>
                                <span t-esc="o.partner_id.zip" style="padding-left:5px;"/>
                                <br/>
                                <strong>เลขประจำตัวผู้เสียภาษี :</strong>
                                <t t-esc="o.partner_id.vat"/>
                                <br/>
                                <strong>สถานที่รับสินค้า :</strong>
<!--                                <t t-esc="o.partner_id.vat"/>-->
                                <br/>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-4">
                    <table class="table table-sm o_main_table">
                        <tr>
                            <td class="text-left">
                                <strong>เลขที่ใบสั่งซื้อ :</strong>
                                <t t-esc="o.name"/>
                                <br/>
                                <strong>วันที่สั่งซื้อ :</strong>
                                <t t-set="year" t-value="(int((o.date_approve).strftime('%Y')))+543"/>
                                <t t-set="date_approve" t-value="'%s/%s' %((o.date_approve).strftime('%d/%m'),year)"/>
                                <t t-esc="date_approve"/>
                                <br/>
                                 <strong>เลขที่ใบเสนอราคา :</strong>
                                <t t-esc="o.quote_id.name"/>
                                <br/>
                                 <strong>หน่วยงานที่ขอซื้อ :</strong>
                                <t t-esc="o.department_id.name"/>
                                <br/>
                                 <strong>วันที่ต้องการสินค้า :</strong>
                                <t t-set="year" t-value="(int((o.date_planned).strftime('%Y')))+543"/>
                                <t t-set="date_planned" t-value="'%s/%s' %((o.date_planned).strftime('%d/%m'),year)"/>
                                <t t-esc="date_planned"/>

                            </td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>
        <div t-attf-class="footer  o_company_#{company.id}_layout">
            <style>
                table, td, th {
                border: none !important;
                }
                .table-border tr td{
                border: 1px solid #000000 !important;
                border-collapse: collapse;
                }
                .column70 {
                width:70px;
                }
                .column370 {
                width:370px;
                }
                .column320 {
                width:320px;
                }
                .column120 {
                width:120px;
                }
                .no_border{
                border-bottom: 2px solid white;
                }
                .no_border tr{
                border-top: 2px solid white;
                border-bottom: 2px solid white;
                }
                .no_border td{
                border-left: 2px solid white;
                border-right: 2px solid white;
                }
            </style>
            <table class="table table-sm table-condensed "
                   style="table-layout: fixed; width: 100%;">
                <tr>
                    <td class="text-center">
                        <!--                        <img src="/npd_purchase_qweb/static/img/header_footer/footer.jpg" width="100%" height="85%"-->
                        <!--                             alt="header"/>-->
                    </td>
                </tr>
            </table>
        </div>
    </template>

    <template id="external_all_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-call="npd_std_po_qweb.external_all_layout_standard">
            <t t-raw="0"/>
        </t>
    </template>

    <template id="report_po">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="npd_std_po_qweb.external_all_layout">
                    <style>
                        table, td, th {
                        table-layout: fixed;
                        width: 100%;
                        }

                        .table thead tr {
                        border: 1px solid black;

                        }
                        .table tbody td {
                        border: 1px solid black;
                        }
                        .table-bordered {
                        border: 1px solid black;
                        }
                        .table-border {
                        border: 1px solid black !important;
                        border-collapse: collapse;
                        }


                        .column30{
                        width:30px;
                        }
                        .column35{
                        width:35px;
                        }

                        .column140{
                        color: #090909;
                        width:140px;
                        }
                        .column100 {
                        color: #090909;
                        width:100px;
                        }
                        .column200{
                        color: #090909;
                        width:200px;
                        }
                        .column260{
                        color: #090909;
                        width:260px;
                        padding-left: 20px;
                        }

                        .column130{
                        color: #090909;
                        width:130px;
                        font-size:16px;
                        }
                        .column120 {
                        color: #090909;
                        width:120px;
                        }

                        .column50 {
                        color: #090909;
                        width:50px;
                        }
                        .column60 {
                        color: #090909;
                        width:60px;
                        }
                        .column65 {
                        color: #090909;
                        width:65px;
                        }
                        .column70 {
                        color: #090909;
                        width:70px;
                        }
                        .column80 {
                        color: #090909;
                        width:80px;
                        }

                        .watermark1 {
                        position: fixed;
                        top: 298px;
                        }
                        .column170{
                        color: #090909;
                        width:170px;
                        }
                        .column190{
                        color: #090909;
                        width:190px;
                        }
                        .column180{
                        width:180px;
                        }
                        .column50{
                        width:50px;
                        }
                        .header_text {
                        font-size:16px;
                        }
                        .header {
                        border: 1px solid #000000;
                        padding: 2px;
                        border-radius: 15px;
                        }
                        .header2 {
                        border-left:2px solid white;
                        }
                        .header3 {
                        text-align: center;
                        border: 1px solid black !important;
                        height: 25px;
                        }
                        .line_ids {
                        border: 1px solid black !important;
                        font-size: 20px !important;
                        }
                        .line_ids_right {
                        border-right: 1px solid white !important;}

                    </style>
                    <div class="page">
                        <table class="table_asset table table-sm table-condensed" >
                            <thead>
                                <tr style="border: 1px solid black !important;">
                                    <td class="column35 header3" style="vertical-align: middle;">
                                        <span>No.</span>
                                    </td>
                                    <td class="column200 header3" style="vertical-align: middle;">
                                        <span>Description</span>
                                    </td>
                                    <td class="column60 text-center header3" style="vertical-align: middle;">
                                        <span>Amount</span>
                                    </td>
                                    <td class="column30 text-center header3" style="vertical-align: middle;">
                                        <span>Unit</span>
                                    </td>
                                    <td class="column70 text-center header3" style="vertical-align: middle;">
                                        <span>Price / Unit</span>
                                    </td>
                                    <td class="column80 text-center header3" style="vertical-align: middle;">
                                        <span>Total Amount</span>
                                    </td>
                                </tr>
                            </thead>
                            <tbody name="line_body" class="line_body">
                                <t t-set="count_line" t-value="0"/>
                                <t t-set="discount" t-value="0"/>
                                <t t-foreach="o.order_line" t-as="line">
                                    <tr>
                                        <td class="text-center line_ids" style="vertical-align: middle;">
                                            <span t-esc="line_index+1"/>
                                        </td>
                                        <td class="text-left line_ids" style="vertical-align: middle;">
                                            <span t-esc="line.name"/>
                                        </td>
                                        <td class="text-center line_ids" style="vertical-align: middle;">
                                            <span t-esc="line.product_qty"/>
                                        </td>
                                        <td class="text-center line_ids" style="vertical-align: middle;">
                                            <span t-esc="line.product_uom.name"/>
                                        </td>
                                        <td class="text-center line_ids" style="vertical-align: middle;">
                                            <span t-esc="'{0:,.2f}'.format(line.price_unit)"/>
                                        </td>
                                        <td class="text-right line_ids" style="vertical-align: middle;">
                                             <span t-esc="'{0:,.2f}'.format(line.product_qty * line.price_unit)"/>
                                             <t t-set="discount" t-value="discount +((line.product_qty*line.price_unit)-line.price_subtotal)"/>
                                        </td>
                                    </tr>
                                </t>

                                <tr style="border: 1px solid black !important;">
                                    <td colspan="2" rowspan="5" class="text-left" >
                                        <strong>หมายเหตุ : <t t-esc="o.notes"/>
                                            <!--                                        <t t-esc="'{0:,.2f}'.format(o.amount_total)"/>-->
                                        </strong>
                                    </td>
                                    <td colspan="3" class="text-right" style="border: 1px solid black !important;">
                                        จำนวนเงินก่อนส่วนลด
                                    </td>
                                    <td class="text-right">
                                         <span t-esc="'{0:,.2f}'.format(o.amount_untaxed + discount)"/>
                                    </td>
                                </tr>
                                <tr style="border: 1px solid black !important;">
                                    <td colspan="3" class="text-right" style="color: red;border: 1px solid black !important;">
                                        ส่วนลด DISCOUNT
                                    </td>
                                    <td  class="text-right" style="border: 1px solid black !important;">
                                        <span t-esc="'{0:,.2f}'.format(discount)"/>
                                    </td>
                                </tr>
                                 <tr style="border: 1px solid black !important;">
                                    <td colspan="3" class="text-right" style="border: 1px solid black !important;">
                                        จำนวนเงินก่อน VAT
                                    </td>
                                    <td class="text-right" style="border: 1px solid black !important;">
                                        <span t-esc="'{0:,.2f}'.format(o.amount_untaxed)"/>
                                    </td>
                                </tr>
                                 <tr style="border: 1px solid black !important;">
                                    <td colspan="3" class="text-right" style="border: 1px solid black !important;">
                                        VAT 7%
                                    </td>
                                    <td class="text-right" style="border: 1px solid black !important;">
                                        <span t-esc="'{0:,.2f}'.format(o.amount_tax)"/>
                                    </td>
                                </tr>
                                 <tr style="border: 1px solid black !important;">
                                    <td colspan="3" class="text-right" style="border: 1px solid black !important;">
                                        จำนวนเงินรวม VAT
                                    </td>
                                    <td class="text-right" style="border: 1px solid black !important;">
                                         <span t-esc="'{0:,.2f}'.format(o.amount_total)"/>
                                    </td>
                                </tr>
                                <tr >
                                    <td colspan="6" class="text-center" style="border: 1px solid black !important;">
                                        (
                                        <t t-esc="o.currency_id.with_context({'lang': 'th_TH'}).amount_to_text(o.amount_total)"/>
                                        )
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>


</odoo>
