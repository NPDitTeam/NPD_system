<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="partner_action_all" model="ir.actions.act_window">
        <field name="name">Partner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p>
        </field>
    </record>
                <record id="partner_category_view_form" model="ir.ui.view">
                    <field name="name">partner.category.view.form</field>
                    <field name="model">partner.category</field>
                    <field name="arch" type="xml">
                        <form string="Partner Category">
                            <sheet>
                            <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button"
                                name="%(partner_action_all)d"
                                icon="fa-th-list"
                                type="action"
                                context="{'search_default_partner_cate_id': active_id, 'default_partner_cate_id': active_id, 'group_expand': True}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="partner_count"/></span>
                                    <span class="o_stat_text"> Partner</span>
                                </div>
                            </button>
                        </div>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only" string="Category Name"/>
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                                    <group>
                                        <field name="parent_id" />
                                        <field name="prefix_category_partner" />
                                    </group>
                                    <group>
                                        <field name="type_category" />
                                        <field name="code" />
                                         <!-- <field name="seq_name" invisible="1" />
                                        <field name="seq_code"  invisible="1"/>
                                        <field name="seq_pre"  invisible="1"/> -->
                                        <field name="sequence_id"  options="{'no_create': True, 'no_edit': True}"/>
                                    </group>
                            
                            </sheet>
                            <div class="oe_chatter">
                                <field name="message_follower_ids"/>
                                <field name="message_ids"/>
                            </div>
                        </form>
                    </field>
                </record>

                <record id="partner_category_view_tree" model="ir.ui.view">
                    <field name="name">partner.category.view.tree</field>
                    <field name="model">partner.category</field>
                    <field name="arch" type="xml">
                        <tree string="Partner Category">
                                <field name="complete_name" />
                                <field name="code" />
                        </tree>
                    </field>
                </record>

                <record id="partner_category_action" model="ir.actions.act_window">
                    <field name="name">Partner Category</field>
                    <field name="res_model">partner.category</field>
                    <field name="view_mode">tree,form</field>
                    <field name="domain">[]</field>
                    <field name="context">{}</field>
                    <field name="help" type="html">
                          <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
                        </p><p>
                <!-- More details about what a user can do with this object will be OK -->
                         </p>
                    </field>
                </record>

                <menuitem
                    id="parnter_category_menu"
                    name="Partner Category"
                    action="partner_category_action"
                    parent="contacts.res_partner_menu_config"
                    sequence="102"/>


                <record id="res_partner_inherit_view_partner_form" model="ir.ui.view">
                    <field name="name">res.partner.view.form.inherit</field>
                    <field name="model">res.partner</field>
                    <field name="inherit_id" ref="base.view_partner_form"/>
                    <field name="arch" type="xml">
                        <xpath expr="//field[@name='ref']" position="before">
                            <field name="partner_cate_list" invisible="1"/>
                            <field name="partner_cate_id" domain="[('id', 'in', partner_cate_list)]" options="
                                    {'no_create_edit': True}"/>
                        </xpath>
                    </field>
                </record>

            
    </data>
</odoo>
